<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.trialnavigation.FirstFragment"
        android:label="FirstFragment" >
        <action
            android:id="@+id/action_firstFragment_to_seconddFragment"
            app:destination="@id/seconddFragment" />
    </fragment>
    <fragment
        android:id="@+id/seconddFragment"
        android:name="com.example.trialnavigation.SeconddFragment"
        android:label="fragment_secondd"
        tools:layout="@layout/fragment_secondd" >
        <action
            android:id="@+id/action_seconddFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.trialnavigation.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" />
</navigation>